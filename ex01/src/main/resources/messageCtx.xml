<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messageKor" class="com.by.spring.quiz.IMessageImplKor">
        <constructor-arg value="constructor-arg 이용"/>
        <constructor-arg value="안녕하세요(생성자 이용)"/>
    </bean>

    <bean id="messageEng" class="com.by.spring.quiz.IMessageImplEng">
        <property name="message" value="property에 setter 이용"/>
        <property name="hello" value="Hello(setter 사용)"/>
    </bean>
</beans>